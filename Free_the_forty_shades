 tables[1].parentNode.removeChild(tables[1]);
document. getElementById ("timer"). innerHTML =0;
c= 0;
x=1;
count=1;
document. getElementById ("scoreprinter"). style. display = "none";
 }
 
  rn = window.prompt("Input number of rows", 1);
 cn = window.prompt("Input number of columns",1);
  var a = rn*cn;
  a1= rn;
var numbersarray = createArrayOfNumbers(1,rn*cn);
var numbersarray2 = createArrayOfNumbers(a+1,2*a);
var i, j,p,q,b;
 var tbl = document.createElement("table");
  var atts = document.createAttribute("style"); atts.value = "border:1px solid green;text-align:center;padding:2px;margin:3px 3px 3px 3px;block :center;"; 
  tbl.setAttributeNode(atts); 
  tbl.setAttribute("id","table");
    for (i = 0; i < rn; i++) 
  {
   var rows = tbl.insertRow(i);
    for (j = 0; j < cn; j++)
     {
    p = another(numbersarray );
    q = another (numbersarray2 );
    this. q= q;
      d = rows.insertCell(j);
       d.height = "50px"; 
       d.width = "50px";
        d.style.backgroundColor = "red";
        d. style . color= "black";
        d. innerHTML = p;
 d.onclick = (function (q,a){
     return function(){
     if(x<=a){
if(this.innerHTML == count) {   
         this.innerHTML = q;
         this. style . backgroundColor = "white";
         count +=1;
         x+=1;
         }
       }
        else
