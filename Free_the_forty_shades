      y+=1;
    }    
function getRandomNumber(min,max)
{
    var step1=max-min+1;
    var step2=Math.random()*step1;
    var result=Math.floor(step2)+min;
    return result ;
}

function createArrayOfNumbers(start,end)
{
    let myarray =[];
    var i;
    for(i=start;i<=end;i++)
    myarray.push(i);
    return myarray ;
}


function another(numbersarray )
{
var randomindex=getRandomNumber(0,numbersarray.length -1);
   var randomnumber = numbersarray[randomindex];
   numbersarray.splice(randomindex ,1);
   return randomnumber;
     }
function timer(){
    if (!timer_is_on) {
    timer_is_on = 1;
    timedCount();
    document. getElementById("timerplace"). style . backgroundColor = "black";
  }
}
  function timedCount() 
  {
      document.getElementById("timer"). innerHTML =c;
      c = ((10*c)+1) ;
      c=c/10;
      t = setTimeout(timedCount, 100);
  }
  
  
  function stopCount(s) {
  clearTimeout(t);
  timer_is_on = 0;
  c = (10*c);
  c = c-1;
  c = c/10;
  
  }
  
  if(s==1){
  document. getElementById ("scoreprinter"). style . display ="block";
  document. getElementById("score"). innerHTML = "Your Score is  " + c;
  document.getElementById("scoreprinter"). style . backgroundColor = "green"}
  else
  {
      document. getElementById("timer"). innerHTML = 0;
    
      
  }
}
  
  function about()
